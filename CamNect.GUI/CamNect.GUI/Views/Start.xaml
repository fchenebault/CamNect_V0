<Window xmlns:Toolkit="clr-namespace:Microsoft.Kinect.Toolkit;assembly=Microsoft.Kinect.Toolkit"  x:Class="CamNect.GUI.Views.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="Start" Height="1080" Width="1920" WindowStyle="None" WindowState="Maximized"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300" xmlns:CircularAnimations_Examples="clr-namespace:CamNect.GUI.Views">
    

    <Grid Loaded="Window_Loaded">
        <Grid.Background>
            <ImageBrush ImageSource="../Ressources/Images/background.png" />
        </Grid.Background>

        <k:KinectUserViewer k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Toolkit:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi" />

        <k:KinectRegion x:Name="kinectRegion" Height="1080" Width="1920">
        </k:KinectRegion>

        
        <TextBlock HorizontalAlignment="Left" Margin="734,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="58" Width="528" FontSize="40" RenderTransformOrigin="0.5,0.5" FontFamily="Gisha">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.103"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Language="fr-fr" Text="Camera control over Kinect "/></TextBlock>
        <TextBlock x:Name="title" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="98" Width="450" FontFamily="Gisha" FontSize="92" FontWeight="Bold" Foreground="#FF662D91" Margin="526,144,936,0"><Run Language="fr-fr" Text="CAMNECT"/></TextBlock>
        <Image HorizontalAlignment="Left" Height="168" Margin="1592,226,0,0" VerticalAlignment="Top" Width="220" Source="/CamNect.GUI;component/Ressources/Images/cameraImageViolet.png"/>

        <Grid Margin="0,62,0,0">
            <CircularAnimations_Examples:BlueDot Width="40" Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:00'/>
            <CircularAnimations_Examples:BlueDot Width="40"  Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:00.2'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="45"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <CircularAnimations_Examples:BlueDot  Width="40" Height="40"  RenderTransformOrigin="0.508,2" BeginTime='00:00:00.4'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="90"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <CircularAnimations_Examples:BlueDot Width="40"  Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:00.6'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="135"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <CircularAnimations_Examples:BlueDot Width="40"  Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:00.8'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <CircularAnimations_Examples:BlueDot Width="40"  Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:01'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="225"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <CircularAnimations_Examples:BlueDot Width="40"  Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:01.2'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="270"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <CircularAnimations_Examples:BlueDot Width="40"  Height="40" RenderTransformOrigin="0.508,2" BeginTime='00:00:01.4'>
                <CircularAnimations_Examples:BlueDot.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <SkewTransform AngleX="0" AngleY="0"/>
                        <RotateTransform Angle="315"/>
                        <TranslateTransform X="0" Y="0"/>
                    </TransformGroup>
                </CircularAnimations_Examples:BlueDot.RenderTransform>
            </CircularAnimations_Examples:BlueDot>
            <Image HorizontalAlignment="Left" Height="290" Margin="1488,710,0,0" VerticalAlignment="Top" Width="414" Source="/CamNect.GUI;component/Ressources/Images/logo1.png"/>
            <Image HorizontalAlignment="Left" Height="100" Margin="86,813,0,0" VerticalAlignment="Top" Width="300" Source="/CamNect.GUI;component/Ressources/Images/kinectS8.png" RenderTransformOrigin="0.492,0.49">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.298"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Grid>

    </Grid>
    

</Window>
